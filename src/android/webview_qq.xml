<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light" >

    <RelativeLayout
        android:id="@+id/rl_topBar"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:background="#eceff4"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/goback"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="#eceff4"
            android:drawableLeft="@drawable/ico_back"
            android:text="返回"
            android:textColor="#fff"
            android:textSize="14sp" />
        <Button
            android:id="@+id/webclose"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:background="#eceff4"
            android:drawableLeft="@drawable/close_bk"
            android:text="关闭"
            android:textColor="#fff"
            android:textSize="14sp" />
    </RelativeLayout>
    <org.apache.cordova.CordovaWebView
        android:layout_below="@+id/rl_topBar"
        android:id="@+id/qq_mywebview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:id="@+id/qq_myview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" 
        android:visibility="gone">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>



</RelativeLayout>